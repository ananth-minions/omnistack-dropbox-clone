{
    "name": "rocketseat-omnistack",
    "private": true,
    "workspaces": {
        "packages": [
            "packages/*"
        ]
    },
    "scripts": {
        "server": "yarn workspace @ricardocanelas/rocketseat-omnistack-server start",
        "web": "yarn workspace @ricardocanelas/rocketseat-omnistack-web start",
        "dev": "concurrently -n web,server --kill-others \"yarn web\" \"yarn server\"",
        "start": "concurrently -n web,server --kill-others \"yarn web\" \"yarn server\""
    },
    "dependencies": {
        "concurrently": "^4.1.0"
    }
}
